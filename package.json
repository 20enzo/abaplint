{
  "name": "abaplint",
  "version": "0.0.13",
  "description": "Linter for ABAP",
  "bin": {
    "abaplint": "./abaplint"
  },
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "browserify": "browserify web/script/script.js -o web/script/bundle.js -s run",
    "uglify": "uglifyjs web/script/bundle.js --compress warnings=false --mangle -o web/script/bundle.js",
    "tslint": "tslint -c tslint.json *.ts test/*.ts src/*.ts src/statements/*.ts src/formatters/*.ts src/tokens/*.ts web/script/*.ts",
    "precompile": "tsc",
    "compile": "npm run browserify ",
    "postcompile": "npm run uglify",
    "pretest": "npm run compile",
    "test": "mocha",
    "typings": "tsd install && cd test && tsd install && cd ..",
    "posttest": "npm run tslint",
    "precoverage": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec",
    "coverage": "remap-istanbul -i coverage/coverage.json -o coverage/coverage-remap.json",
    "postcoverage": "codecov -f coverage/coverage-remap.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/larshp/abaplint.git"
  },
  "keywords": [
    "ABAP"
  ],
  "author": "Lars Hvam Petersen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/larshp/abaplint/issues"
  },
  "homepage": "https://github.com/larshp/abaplint#readme",
  "devDependencies": {
    "browserify": "^13.0.0",
    "chai": "^3.4.1",
    "mocha": "^2.3.4",
    "tsd": "^0.6.5",
    "tslint": "^3.3.0",
    "typescript": "^1.7.5",
    "uglify-js": "^2.6.1"
  },
  "dependencies": {
    "codecov": "^1.0.1",
    "glob": "^6.0.4",
    "istanbul": "^0.4.2",
    "minimist": "^1.2.0",
    "remap-istanbul": "^0.5.1"
  }
}
