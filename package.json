{
  "name": "abaplint",
  "version": "1.1.2",
  "description": "Linter for ABAP",
  "bin": {
    "abaplint": "./abaplint"
  },
  "main": "build/src/index.js",
  "typings": "build/src/index.d.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "tslint": "tslint -c tslint.json 'src/**/*.ts' 'test/**/*.ts'",

    "precompile": "rm -rf build",
    "compile": "tsc --pretty",
    "postcompile": "sh version.sh",

    "pretest": "npm run compile",
    "test": "mocha --recursive --reporter progress build/test",
    "posttest": "npm run tslint",

    "precoverage": "tsc --sourceMap && istanbul cover ./node_modules/mocha/bin/_mocha build/test --report lcovonly -- -R spec --recursive",
    "coverage": "remap-istanbul -i coverage/coverage.json -o coverage/coverage-remap.json",
    "postcoverage": "codecov -f coverage/coverage-remap.json",

    "browserify": "browserify build/src/runner.js -o build/bundle.js -s abaplint",
    "uglify": "uglifyjs build/bundle.js --compress warnings=false --mangle --keep-fnames -o build/bundle.js",
    "preweb.playground": "npm run browserify && npm run uglify && cp build/bundle.js web/playground/script/bundle.js",
    "web.playground": "cp node_modules/codemirror/lib/codemirror.js web/playground/script/ && cp node_modules/codemirror/addon/selection/mark-selection.js web/playground/script/ && cp node_modules/codemirror/lib/codemirror.css web/playground/style/",
    "postweb.playground": "cp node_modules/codemirror/theme/mbo.css web/playground/style/ && cp node_modules/codemirror-abap/build/abap.js web/playground/script/",

    "web.syntax": "mkdir -p web/syntax && rm -f web/syntax/*.txt && rm -f web/syntax/*.svg && node build/src/abap/graphs.js && node web/generate.js && rm -f web/syntax/*.txt"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/larshp/abaplint.git"
  },
  "engines": {
    "node": ">=10.5.0",
    "npm": ">= 6.0.0"
  },
  "keywords": [
    "ABAP",
    "lint"
  ],
  "author": "Lars Hvam Petersen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/larshp/abaplint/issues"
  },
  "homepage": "https://github.com/larshp/abaplint#readme",
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/glob": "^7.1.0",
    "@types/minimatch": "^3.0.0",
    "@types/minimist": "^1.2.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.11.0",
    "@types/progress": "^2.0.1",
    "browserify": "^16.0.0",
    "chai": "^4.1.2",
    "codecov": "^3.0.0",
    "codemirror": "^5.39.2",
    "codemirror-abap": "^0.1.9",
    "istanbul": "^0.4.5",
    "mocha": "^5.0.0",
    "railroad-diagrams": "git+https://github.com/tabatkins/railroad-diagrams#gh-pages",
    "remap-istanbul": "^0.12.0",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.3.1",
    "typescript": "^3.1.1",
    "uglify-js": "^3.0.27"
  },
  "dependencies": {
    "glob": "^7.1.2",
    "minimist": "^1.2.0",
    "progress": "^2.0.0"
  }
}
