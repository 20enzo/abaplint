{
  "name": "abaplint",
  "version": "0.0.10",
  "description": "Linter for ABAP",
  "bin": {
    "abaplint": "./abaplint"
  },
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "compile": "tsc *.ts **/*.ts --module commonjs",
    "pretest": "npm run compile",
    "test": "mocha",
    "posttest": "tslint -c tslint.json *.ts test/*.ts src/*.ts src/statements/*.ts src/tokens/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/larshp/abaplint.git"
  },
  "keywords": [
    "ABAP"
  ],
  "author": "Lars Hvam Petersen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/larshp/abaplint/issues"
  },
  "homepage": "https://github.com/larshp/abaplint#readme",
  "devDependencies": {
    "chai": "^3.4.1",
    "mocha": "^2.3.4"
  },
  "dependencies": {
    "glob": "^6.0.2",
    "minimist": "^1.2.0"
  }
}
